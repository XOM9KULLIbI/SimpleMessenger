<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="64dp"
    android:padding="@dimen/spacing_medium"
    android:background="?attr/selectableItemBackground">

    <ImageView
        android:id="@+id/avatarView"
        android:layout_width="@dimen/avatar_size"
        android:layout_height="@dimen/avatar_size"
        android:src="@drawable/ic_avatar_placeholder"
        android:background="@drawable/avatar_circle_bg"
        android:scaleType="centerCrop"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

    <TextView
        android:id="@+id/chatName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Имя"
        android:textStyle="bold"
        android:textSize="@dimen/text_large"
        android:textColor="@color/black"
        android:layout_marginStart="@dimen/spacing_medium"
        android:layout_marginEnd="@dimen/spacing_medium"
        android:maxLines="1"
        android:ellipsize="end"
        app:layout_constraintStart_toEndOf="@id/avatarView"
        app:layout_constraintEnd_toStartOf="@id/timeView"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/lastMessage"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Последнее сообщение"
        android:textSize="@dimen/text_medium"
        android:textColor="#888888"
        android:layout_marginStart="@dimen/spacing_medium"
        android:layout_marginEnd="@dimen/spacing_medium"
        android:maxLines="2"
        android:ellipsize="end"
        app:layout_constraintStart_toEndOf="@id/avatarView"
        app:layout_constraintEnd_toStartOf="@id/unreadBadge"
        app:layout_constraintTop_toBottomOf="@id/chatName"
        app:layout_constraintBottom_toBottomOf="parent" />

    <TextView
        android:id="@+id/timeView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="17:59"
        android:textSize="@dimen/text_small"
        android:textColor="#888888"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/unreadBadge"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:background="@drawable/unread_badge_bg"
        android:textColor="#FFFFFF"
        android:textSize="@dimen/text_small"
        android:gravity="center"
        android:minWidth="24dp"
        android:minHeight="24dp"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout> 